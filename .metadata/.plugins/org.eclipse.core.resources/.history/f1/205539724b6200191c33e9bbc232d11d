#ifndef __BOARD_H_
#define __BOARD_H_

#include "chip.h"

/* Board name */
#define BOARD_EDU_CIAA_4337

/*************
 * Constants *
 ************/
#define LED_1		0
#define LED_2		1
#define LED_3		2
#define LED_RED		3
#define LED_GREEN	4
#define LED_BLUE	5

#define TEC_1		0
#define TEC_2		1
#define TEC_3		2
#define TEC_4		3

/********************
 * Public functions *
 *******************/
void Board_Init(void);

/* LEDs control functions */
void Board_LED_Set(uint8_t LEDNumber, bool On);
bool Board_LED_IsOn(uint8_t LEDNumber);
void Board_LED_Toggle(uint8_t LEDNumber);

/* Buttons control functions */
bool Board_BUTTON_isPressed(uint8_t BUTTONNumber);
uint32_t Board_BUTTON_GetStatus(void);

#endif /* __BOARD_H_ */
