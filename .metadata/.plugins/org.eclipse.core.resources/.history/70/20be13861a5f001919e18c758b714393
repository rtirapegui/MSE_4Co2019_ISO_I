#include "conf_os.h"
#include "os_tick.h"

/****************
 *	Variables	*
 ***************/


/************************
 *	External functions	*
 ***********************/
/* From module: os_task.h*/
extern inline void os_task_sysTickHandler(void);
extern inline void OS_TASK_PREEMPT_DISABLE(void);
extern inline void OS_TASK_PREEMPT_ENABLE(void);

/************************
 *	Private functions	*
 ***********************/


/************************
 *	Kernel functions	*
 ***********************/


/************************
 *	Public functions	*
 ***********************/
void os_tick_init(void)
{

}
tick_t os_tick_getCount(void)
{
	tick_t ticks;

	OS_TASK_PREEMPT_DISABLE();	/* Disable preemption */
	{
		ticks = g_tickCount;
	}
	OS_TASK_PREEMPT_ENABLE();	/* Enable preemption */

	return ticks;
}


