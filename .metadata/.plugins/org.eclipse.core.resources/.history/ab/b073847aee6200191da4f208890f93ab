#ifndef _OS_QUEUE_H_
#define _OS_QUEUE_H_

/*==================[inclusions]=============================================*/
#include <stdint.h>
#include <stdbool.h>
#include "portmacro.h"

/*==================[typedef]================================================*/

/* Queue type */
typedef struct
{
	volatile uint32_t writeOffset;
	volatile uint32_t readOffset;
	uint32_t size;
	void * buffer;
	void * waitingTask;
} queue_t;

/*==================[macros]=================================================*/


/*==================[external data declaration]==============================*/

/*==================[functions declaration]==================================*/
bool os_queue_send(queue_t * queue, void * sndElement, tick_t ticksToWait);
bool os_queue_receive(queue_t * queue, void * rcvElement, tick_t ticksToWait);

/*==================[end of file]============================================*/

#endif	/*	#ifndef _OS_QUEUE_H_ */
