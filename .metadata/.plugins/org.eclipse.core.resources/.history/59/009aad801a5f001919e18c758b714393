#include "conf_os.h"
#include "os.h"

/************************
 *	External functions	*
 ***********************/
/* From module: os_tick.h*/
extern void os_tick_init(void);

/* From module: os_task.h*/
extern void os_task_init(void);

/************************
 *	Public functions	*
 ***********************/
void os_start(void)
{
	/* Initialize system tasks */
	os_task_init();

	/* Initialize system tasks */
	os_tick_init();

	while(1)
	{
		__WFI();
	}
}
